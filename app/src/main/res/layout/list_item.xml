<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/lin_list_container"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="@string/app_name"
            tools:src="@drawable/dummy" />

        <TextView
            android:id="@+id/txt_list_title"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:transitionName="A"
            android:textColor="@android:color/primary_text_light"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/txt_list_desc"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:transitionName="B"
            android:text="@string/lorelorelorelorelereorlereorlereorelreo"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.design.card.MaterialCardView>